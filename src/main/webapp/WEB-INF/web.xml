    </servlet>
    <servlet-mapping>
        <servlet-name>blobstore_server</servlet-name>
        <url-pattern>/blobstore_server</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>timeline</servlet-name>
        <servlet-class>com.nguyenmp.cs263_real.servlet.Timeline</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>timeline</servlet-name>
        <url-pattern>/timeline</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>porter</servlet-name>
        <servlet-class>com.nguyenmp.cs263_real.servlet.Porter</servlet-class>
    </servlet>
